<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="313dp"
            android:layout_height="306dp" tools:layout_editor_absoluteX="50dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.701"
            android:id="@+id/cly_fragmento">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="Tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_tercero"
            app:layout_constraintTop_toTopOf="@+id/btn_segundo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_segundo"
            app:layout_constraintStart_toEndOf="@+id/btn_segundo"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Primero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_primero"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cly_fragmento" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.094"/>
    <Button
            android:text="Segundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_segundo"
            app:layout_constraintTop_toTopOf="@+id/btn_primero" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toBottomOf="@+id/btn_primero"
            app:layout_constraintStart_toEndOf="@+id/btn_primero" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>