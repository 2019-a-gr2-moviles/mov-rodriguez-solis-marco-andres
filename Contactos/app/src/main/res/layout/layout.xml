<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/linear_layout">

    <TextView
            android:text="TextView"
            android:layout_width="139dp"
            android:layout_height="74dp" android:id="@+id/txt_view_nombre"
    />
    <TextView
            android:layout_width="89dp"
            android:layout_height="match_parent" android:id="@+id/txt_llamando" android:layout_weight="1"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent" app:srcCompat="@android:drawable/sym_call_outgoing"
            android:id="@+id/btn_llamada" android:layout_weight="1"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_dialog_email"
            android:id="@+id/btn_enviar_mensaje" android:layout_weight="1"/>
</LinearLayout>
